<%= form_for @animals do |f| %>
 <%= f.label :name %>
 <%= f.text_field :name, placeholder: "Name" %><br>
 <%= f.label :species %>
 <%= f.text_field :species, placeholder: "Species" %><br>
 <%= f.label :breed %>
 <%= f.text_field :breed, placeholder: "Breed" %><br>
 <%= f.label :age %>
 <%= f.number_field :age, placeholder: "Age" %><br>
 <%= f.label :sex %>
 <%= f.text_field :sex, placeholder: "Sex" %><br>
 <%= f.label :arrival_time %>
 <%= f.date_field :arrival_time, placeholder: "Arrival" %><br>
 <%= f.label :departure_time %>
 <%= f.date_field :departure_time, placeholder: "Departure" %><br>

 <%= f.submit %>
<% end %>